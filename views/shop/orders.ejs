<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>

            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach((order,index) => { %>
                       
                        <li class="orders__item">
                            <h1>Order - # <%= order._id %></h1>
                            <h3 ><%= totalPrices[index].totalPriceOfOrder %>$</h3>
                            <a class='btn' href='/orders/<%= order._id %>'> - Invoice</a>
                            <ul class="orders__products">
                                <% order.products.forEach((p,i) => { %>
                                    <li class="orders__products-item"><%= p.product.title %> (<%= p.quantity %>)
                                        <h4 class='pricing'><%= p.quantity %> &#215; <%= totalPrices[index].priceWithOutQty[i] %>$</h4> 
                                      
                                    </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>